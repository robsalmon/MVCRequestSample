
@model MVCRequestSample.Models.AdditionViewModel
@{
    ViewBag.Title = "Add two numbers together";
}

<h2>Add two numbers together</h2>

@Html.ValidationSummary()


@using (Html.BeginForm("Index", "Home"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.FirstNumber, "First Number")
        @Html.TextBoxFor(x => x.FirstNumber, new { @class = "form=control", @type = "number", @required = "required" })
        @Html.ValidationMessageFor(x => x.FirstNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.SecondNumber, "Second Number")
        @Html.TextBoxFor(x => x.SecondNumber, new { @class = "form=control", @type = "number", @required = "required" })
        @Html.ValidationMessageFor(x => x.SecondNumber)
    </div>
    <div class="form-group">
        <input class="btn btn-primary pull-right" type="submit" text="Submit">
    </div>
}


    <p>Result:    @Model.Result   </p>
